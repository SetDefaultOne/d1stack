{
    "name": "@d1stack/source",
    "version": "0.1.0",
    "author": {
        "name": "Default One",
        "email": "setdefaultone@gmail.com",
        "url": "https://setdefault.one"
    },
    "bugs": "https://github.com/SetDefaultOne/d1stack/issues",
    "devDependencies": {
        "@commitlint/cli": "19.6.0",
        "@d1stack/commitlint-config": "*",
        "@d1stack/prettier-config": "*",
        "@d1stack/syncpack-config": "*",
        "husky": "9.1.7",
        "syncpack": "13.0.0",
        "turbo": "2.3.2"
    },
    "devEngines": {
        "runtime": {
            "name": "node",
            "onFail": "error"
        },
        "packageManager": {
            "name": "npm",
            "onFail": "error"
        }
    },
    "engines": {
        "node": "22.11.0",
        "npm": "10.9.0"
    },
    "homepage": "https://github.com/SetDefaultOne/d1stack#README",
    "keywords": [
        "d1stack"
    ],
    "license": "UNLICENSED",
    "packageManager": "npm@10.9.0",
    "repository": "SetDefaultOne/d1stack.git",
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "format": "turbo format",
        "lint": "turbo lint",
        "prepare": "husky",
        "source:format": "syncpack format && prettier --write .",
        "source:lint": "syncpack lint && prettier --check ."
    },
    "workspaces": [
        "apps/*",
        "libs/*",
        "configs/*"
    ]
}
