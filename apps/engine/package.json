{
    "name": "@d1stack/engine",
    "version": "0.1.0",
    "dependencies": {
        "@d1stack/database": "*",
        "@d1stack/sdk": "*",
        "@nestjs/common": "10.4.15",
        "@nestjs/core": "10.4.15",
        "@nestjs/platform-express": "10.4.15",
        "reflect-metadata": "0.2.2",
        "rxjs": "7.8.1"
    },
    "devDependencies": {
        "@d1stack/eslint-config": "*",
        "@d1stack/typescript-config": "*",
        "@nestjs/cli": "10.4.9",
        "@nestjs/schematics": "10.2.3",
        "@nestjs/testing": "10.4.15",
        "@types/express": "5.0.0",
        "@types/jest": "29.5.14",
        "@types/node": "22.10.1",
        "@types/supertest": "6.0.2",
        "jest": "29.7.0",
        "source-map-support": "0.5.21",
        "supertest": "7.0.0",
        "swc-loader": "0.2.6",
        "ts-jest": "29.2.5",
        "ts-loader": "9.5.1",
        "ts-node": "10.9.2",
        "tsconfig-paths": "4.2.0",
        "typescript": "5.7.2"
    },
    "homepage": "https://github.com/SetDefaultOne/d1stack/blob/main/apps/engine#README",
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "repository": {
        "type": "git",
        "directory": "apps/engine",
        "url": "git+https://github.com/SetDefaultOne/d1stack.git"
    },
    "scripts": {
        "build": "nest build",
        "dev": "nest start --watch",
        "lint": "eslint \"{src,test}/**/*.ts\" --fix",
        "start": "nest start",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "test:coverage": "jest --coverage --maxWorkers=4 --passWithNoTests",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --maxWorkers=4 --passWithNoTests",
        "test:e2e": "jest --config ./test/jest-e2e.json --maxWorkers=4 --passWithNoTests",
        "test:unit": "jest --maxWorkers=4 --passWithNoTests",
        "test:watch": "jest --watch --maxWorkers=4 --passWithNoTests"
    }
}
