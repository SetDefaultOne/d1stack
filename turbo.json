{
    "$schema": "https://turborepo.org/schema.json",
    "tasks": {
        "//#source:format": {},
        "//#source:lint": {
            "dependsOn": ["//#source:format"]
        },
        "format": {
            "dependsOn": ["//#source:format"]
        },
        "lint": {
            "dependsOn": ["//#source:lint", "format"]
        },
        "build": {
            "dependsOn": ["format", "lint"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
